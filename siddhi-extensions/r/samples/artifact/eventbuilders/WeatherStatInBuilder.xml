<?xml version="1.0" encoding="UTF-8"?>
<eventBuilder name="WeatherStatInBuilder" statistics="disable"
    trace="disable" xmlns="http://wso2.org/carbon/eventbuilder">
    <from eventAdaptorName="jmsQueueAdaptor" eventAdaptorType="jms">
        <property name="transport.jms.Destination">Weather</property>
    </from>
	<mapping customMapping="enable" type="xml">
        <xpathDefinition namespace="http://samples.wso2.org/" prefix="weatherdata"/>
        <property>
            <from xpath="//weatherdata:WeatherStat/weatherdata:Time"/>
            <to name="Time" type="long"/>
        </property>
        <property>
            <from xpath="//weatherdata:WeatherStat/weatherdata:Temp"/>
            <to name="Temp" type="double"/>
        </property>
    </mapping>
    <to streamName="WeatherStatsStream" version="1.0.0"/>
</eventBuilder>
